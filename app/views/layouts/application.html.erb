<!DOCTYPE html>
<html>
  <head>
    <title>TestLibrary</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand">Библиотека</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-item nav-link active" href="<%= books_path %>">Все книги<span class="sr-only">(current)</span></a>
      <a class="nav-item nav-link" href="<%= authors_path %>">Все авторы</a>
      <a class="nav-item nav-link" href="<%= categories_path %>" >Все категории</a>
    </div>

    <%= link_to 'Добавить книгу', new_book_path, class: 'btn btn-primary pull-xs-right' %>
    <% if user_signed_in? %>
    <%= link_to 'Выход', destroy_user_session_path, method: :delete, class: 'btn btn-primary add_somethg pull-xs-right' %>
    <% else %>
    <%= link_to 'Вход', new_user_session_path, class: 'btn btn-primary add_somethg pull-xs-right' %>
    <%= link_to 'Регистрация', new_user_registration_path, class: 'btn btn-primary add_somethg pull-xs-right' %>
    <% end %>

  </div>
</nav>
</div>

    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <% flash.each do |name, message| %>
            <div class="alert <%= bootstrap_class_for(name) %>">
              <button class="close" data-dismiss="alert"> </button>
              <%= message %>
            </div>
          <% end %>
        </div>
      </div>
    <%= yield %>
    </div>
  </body>
</html>
