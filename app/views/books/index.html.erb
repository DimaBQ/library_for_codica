

<table>
  <thead>
  </thead>

  <tbody>
    <h1>Все книги</h1>
    <hr />
    <div class="book_post">
    <% @books.each do |book| %>
        <small>
          <h2><%= link_to book.name, book %></h2>
          <%= link_to 'Редактировать', edit_book_path(book) %>
          |
          <%= link_to 'Удалить', book_path(book), method: :delete, data: { confirm: 'Вы уверенны?' } %> <br />

          автор(ы): <%= raw book.authors.map(&:name).map{ |t| link_to t, author_path(t), class: 'tag tag-primary' }.join(' ') %><br />

          категория: <%= raw book.categories.map(&:name).map{ |t| link_to t, category_path(t), class: 'tag tag-primary' }.join(' ') %>
        </small>
        <section class="book-body clearfix">
        <%= image_tag book.image.url(:thumb), class: 'img-thumbnail thumb img-show' if book.image? %>
        <%= book.body %>
        </section>

        <hr />
    <% end %>
  </div>

  </tbody>
</table>

<br>
